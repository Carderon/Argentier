.loader,
.loader:after
  border-radius 50%
  width 5em
  height 5em
.loader
  font-size .5em
  position relative
  border-top .75em solid rgba(black, 0.2)
  border-right .75em solid rgba(black, 0.2)
  border-bottom .75em solid rgba(black, 0.2)
  border-left .75em solid black
  transform translateZ(0)
  animation spin 1.1s infinite linear

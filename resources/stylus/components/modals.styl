.modal
    width 100%
    height 100%
    position fixed
    top 0
    left 0
    background-color rgba( black, .5 )
    overflow auto
    &-container
        margin 5em auto
        background-color white
        padding 2em
        &.-sm
            width 480px
        &.-md
            width 560px
        &.-lg
            width 960px
    &-title
        margin 0
    &-header
        padding-bottom 1.5em
    &-body
        margin-bottom 2em
